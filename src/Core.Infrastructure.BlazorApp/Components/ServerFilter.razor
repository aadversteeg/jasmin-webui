@inherits MvvmComponentBase<EventFilterViewModel>

<div class="d-flex align-items-center">
    <label class="form-label mb-0 me-2 text-nowrap">Server:</label>
    <select class="form-select form-select-sm filter-dropdown"
            value="@(ViewModel.SelectedServer ?? "")"
            @onchange="OnServerChanged">
        <option value="">All servers</option>
        @foreach (var server in ViewModel.KnownServers.OrderBy(s => s))
        {
            <option value="@server">@server</option>
        }
    </select>
</div>

@code {
    private void OnServerChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        ViewModel.SelectedServer = string.IsNullOrEmpty(value) ? null : value;
    }
}
