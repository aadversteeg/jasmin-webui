@using Core.Application.McpServers
@using Core.Infrastructure.BlazorApp.ViewModels

<div class="tab-pane-content">
    @if (ResourcesResult == null)
    {
        <div class="text-muted">
            <p>Loading resources...</p>
        </div>
    }
    else if (ResourcesResult.Items.Count == 0)
    {
        <div class="text-muted">
            <p>No resources available for this server.</p>
        </div>
    }
    else
    {
        <ExpandableListHeader
            TimestampLabel="Retrieved at"
            Timestamp="@ResourcesResult.RetrievedAt"
            OnExpandAll="ExpandAll"
            OnCollapseAll="CollapseAll" />

        <div class="items-container">
            @foreach (var resource in ResourcesResult.Items)
            {
                <ExpandableItemCard
                    Name="@resource.Name"
                    Title="@resource.Title"
                    Description="@resource.Description"
                    IsExpanded="@_viewModel.IsExpanded(resource.Name)"
                    OnToggle="() => ToggleExpand(resource.Name)">
                    <HeaderActions>
                        <button class="btn btn-sm btn-outline-primary"
                                @onclick="() => HandleView(resource)"
                                @onclick:stopPropagation="true">
                            View
                        </button>
                    </HeaderActions>
                    <ChildContent>
                    <table class="table table-sm table-bordered mb-0">
                        <tbody>
                            <tr>
                                <th class="table-light" style="width: 100px;">URI</th>
                                <td><code>@resource.Uri</code></td>
                            </tr>
                            @if (!string.IsNullOrEmpty(resource.MimeType))
                            {
                                <tr>
                                    <th class="table-light">MIME Type</th>
                                    <td><code>@resource.MimeType</code></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    </ChildContent>
                </ExpandableItemCard>
            }
        </div>

        @if (ResourcesResult.Errors != null && ResourcesResult.Errors.Count > 0)
        {
            <div class="alert alert-warning mt-3">
                <strong>Errors:</strong>
                <ul class="mb-0">
                    @foreach (var error in ResourcesResult.Errors)
                    {
                        <li>@error.Code: @error.Message</li>
                    }
                </ul>
            </div>
        }
    }
</div>

@code {
    [Parameter]
    public McpServerMetadataResult<McpServerResource>? ResourcesResult { get; set; }

    [Parameter]
    public EventCallback<McpServerResource> OnViewResource { get; set; }

    private readonly ExpandableItemsViewModel _viewModel = new();

    protected override void OnInitialized()
    {
        _viewModel.StateChanged += StateHasChanged;
    }

    private void ToggleExpand(string resourceName)
    {
        _viewModel.ToggleExpand(resourceName);
    }

    private void ExpandAll()
    {
        if (ResourcesResult?.Items != null)
        {
            _viewModel.ExpandAll(ResourcesResult.Items.Select(r => r.Name));
        }
    }

    private void CollapseAll()
    {
        _viewModel.CollapseAll();
    }

    private async Task HandleView(McpServerResource resource)
    {
        await OnViewResource.InvokeAsync(resource);
    }

    public void Dispose()
    {
        _viewModel.StateChanged -= StateHasChanged;
    }
}
