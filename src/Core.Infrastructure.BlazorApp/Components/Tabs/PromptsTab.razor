@using Core.Application.McpServers

<div class="tab-pane-content">
    @if (PromptsResult == null)
    {
        <div class="text-muted">
            <p>Loading prompts...</p>
        </div>
    }
    else if (PromptsResult.Items.Count == 0)
    {
        <div class="text-muted">
            <p>No prompts available for this server.</p>
        </div>
    }
    else
    {
        @if (PromptsResult.RetrievedAt.HasValue)
        {
            <p class="text-muted small mb-3">
                Retrieved at @PromptsResult.RetrievedAt.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")
            </p>
        }

        <div class="list-group list-group-flush">
            @foreach (var prompt in PromptsResult.Items)
            {
                var isExpanded = _expandedPrompts.Contains(prompt.Name);
                <div class="list-group-item bg-transparent border-secondary px-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">
                            <code>@prompt.Name</code>
                            @if (!string.IsNullOrEmpty(prompt.Title) && prompt.Title != prompt.Name)
                            {
                                <span class="text-muted ms-2">@prompt.Title</span>
                            }
                        </h6>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => ToggleExpand(prompt.Name)">
                            @(isExpanded ? "▲" : "▼")
                        </button>
                    </div>
                    @if (isExpanded)
                    {
                        <div class="mt-2">
                            @if (!string.IsNullOrEmpty(prompt.Description))
                            {
                                <p class="mb-2 text-muted small">@prompt.Description</p>
                            }
                            @if (prompt.Arguments.Count > 0)
                            {
                                <table class="table table-sm table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Argument</th>
                                            <th>Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var arg in prompt.Arguments)
                                        {
                                            <tr>
                                                <td>
                                                    <code>@arg.Name</code>
                                                    @if (arg.Required)
                                                    {
                                                        <span class="text-danger">*</span>
                                                    }
                                                </td>
                                                <td class="text-muted">@(arg.Description ?? "")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p class="text-muted small mb-0">No arguments</p>
                            }
                        </div>
                    }
                </div>
            }
        </div>

        @if (PromptsResult.Errors != null && PromptsResult.Errors.Count > 0)
        {
            <div class="alert alert-warning mt-3">
                <strong>Errors:</strong>
                <ul class="mb-0">
                    @foreach (var error in PromptsResult.Errors)
                    {
                        <li>@error.Code: @error.Message</li>
                    }
                </ul>
            </div>
        }
    }
</div>

@code {
    [Parameter]
    public McpServerMetadataResult<McpServerPrompt>? PromptsResult { get; set; }

    private HashSet<string> _expandedPrompts = new();

    private void ToggleExpand(string promptName)
    {
        if (!_expandedPrompts.Remove(promptName))
        {
            _expandedPrompts.Add(promptName);
        }
    }
}
