@using Core.Application.McpServers
@using Core.Infrastructure.BlazorApp.ViewModels

<div class="tab-pane-content">
    @if (PromptsResult == null)
    {
        <div class="text-muted">
            <p>Loading prompts...</p>
        </div>
    }
    else if (PromptsResult.Items.Count == 0)
    {
        <div class="text-muted">
            <p>No prompts available for this server.</p>
        </div>
    }
    else
    {
        <ExpandableListHeader
            TimestampLabel="Retrieved at"
            Timestamp="@PromptsResult.RetrievedAt"
            OnExpandAll="ExpandAll"
            OnCollapseAll="CollapseAll" />

        <div class="items-container">
            @foreach (var prompt in PromptsResult.Items)
            {
                <ExpandableItemCard
                    Name="@prompt.Name"
                    Title="@prompt.Title"
                    Description="@prompt.Description"
                    IsExpanded="@_viewModel.IsExpanded(prompt.Name)"
                    OnToggle="() => ToggleExpand(prompt.Name)">
                    @if (prompt.Arguments.Count > 0)
                    {
                        <table class="table table-sm table-bordered mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Argument</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var arg in prompt.Arguments)
                                {
                                    <tr>
                                        <td>
                                            <code>@arg.Name</code>
                                            @if (arg.Required)
                                            {
                                                <span class="text-danger">*</span>
                                            }
                                        </td>
                                        <td class="text-muted">@(arg.Description ?? "")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted small mb-0">No arguments</p>
                    }
                </ExpandableItemCard>
            }
        </div>

        @if (PromptsResult.Errors != null && PromptsResult.Errors.Count > 0)
        {
            <div class="alert alert-warning mt-3">
                <strong>Errors:</strong>
                <ul class="mb-0">
                    @foreach (var error in PromptsResult.Errors)
                    {
                        <li>@error.Code: @error.Message</li>
                    }
                </ul>
            </div>
        }
    }
</div>

@code {
    [Parameter]
    public McpServerMetadataResult<McpServerPrompt>? PromptsResult { get; set; }

    private readonly ExpandableItemsViewModel _viewModel = new();

    protected override void OnInitialized()
    {
        _viewModel.StateChanged += StateHasChanged;
    }

    private void ToggleExpand(string promptName)
    {
        _viewModel.ToggleExpand(promptName);
    }

    private void ExpandAll()
    {
        if (PromptsResult?.Items != null)
        {
            _viewModel.ExpandAll(PromptsResult.Items.Select(p => p.Name));
        }
    }

    private void CollapseAll()
    {
        _viewModel.CollapseAll();
    }

    public void Dispose()
    {
        _viewModel.StateChanged -= StateHasChanged;
    }
}
