@page "/"
@inherits MvvmComponentBase<EventViewerViewModel>
@inject IJSRuntime JS
@inject SidePanelViewModel SidePanelVM
@inject LeftPanelViewModel LeftPanelVM
@inject EventFilterViewModel FilterVM
@inject ConfigurationViewModel ConfigVM
@inject INavigationService NavigationService

<PageTitle>Jasmin Event Viewer</PageTitle>

<HeaderBar>
    <div class="container-fluid">
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                <button class="btn btn-outline-secondary"
                        @onclick="() => LeftPanelVM.TogglePanelCommand.Execute(null)"
                        title="@(LeftPanelVM.IsPanelOpen ? "Close details" : "Open details")">
                    @(LeftPanelVM.IsPanelOpen ? "◀" : "▶")
                </button>
            </div>
            <div class="col-auto">
                <button class="btn btn-outline-secondary active" title="Home" disabled>
                    <svg width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"><path d="M8 1L1 8h3v6h3v-4h2v4h3V8h3L8 1z"/></svg>
                </button>
            </div>
            <div class="col-auto">
                <span class="connection-indicator @GetConnectionClass()" title="@GetConnectionText()"></span>
                <span class="text-muted small">@GetConnectionText()</span>
            </div>
            <div class="col"></div>
            <div class="col-auto d-flex gap-2">
                <button class="btn btn-outline-secondary"
                        @onclick="OpenConfiguration"
                        title="Configure server connection">
                    Configure
                </button>
                <button class="btn btn-outline-secondary" @onclick="() => ViewModel.ClearEventsCommand.Execute(null)">
                    Clear
                </button>
                <button class="btn btn-outline-secondary"
                        @onclick="() => SidePanelVM.TogglePanelCommand.Execute(null)"
                        title="@(SidePanelVM.IsPanelOpen ? "Close panel" : "Open panel")">
                    @(SidePanelVM.IsPanelOpen ? "▶" : "◀")
                </button>
            </div>
        </div>
        @if (ViewModel.LastError != null)
        {
            <div class="row mt-2">
                <div class="col">
                    <div class="alert alert-danger py-2 mb-0 small">
                        @ViewModel.LastError
                    </div>
                </div>
            </div>
        }
    </div>
</HeaderBar>

<ConfigurationDialog />


<div class="events-area" id="events-container" @onscroll="OnScroll">
    @if (!FilteredEvents.Any())
    {
        <div class="empty-state">
            @if (!ViewModel.Events.Any())
            {
                <div class="empty-state-icon">&#128225;</div>
                <p>No events yet.</p>
                @if (!IsConnected)
                {
                    <p class="text-muted small">Connect to a jasmin-server to start receiving events.</p>
                }
            }
            else
            {
                <div class="empty-state-icon">&#128269;</div>
                <p>No events match the current filters.</p>
                <p class="text-muted small">Try adjusting the server or event type filters.</p>
            }
        </div>
    }
    else
    {
        @foreach (var evt in FilteredEvents)
        {
            <EventCard Event="evt" />
        }
    }
</div>

@code {
    private bool _autoScroll = true;
    private bool _isDisposed;
    private bool _pendingScrollToBottom;

    private bool IsConnected => ViewModel.ConnectionState == ConnectionState.Connected;
    private bool IsConnecting => ViewModel.ConnectionState == ConnectionState.Connecting;

    private IEnumerable<McpServerEvent> FilteredEvents => ViewModel.FilteredEvents;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        NavigationService.SetPageContext(SidePanelContentType.EventFilters, "Jasmin Event Viewer");
        ViewModel.EventAdded += HandleEventAdded;
        FilterVM.FilterChanged += HandleFilterChanged;
        ConfigVM.UrlSaved += HandleUrlSaved;
        ConfigVM.DisconnectRequested += HandleDisconnectRequested;
    }

    private void HandleFilterChanged()
    {
        if (_isDisposed) return;
        InvokeAsync(StateHasChanged);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_pendingScrollToBottom && !_isDisposed)
        {
            _pendingScrollToBottom = false;
            await JS.InvokeVoidAsync("scrollHelper.scrollToBottom", "events-container");
        }
    }

    private async Task OpenConfiguration()
    {
        await ConfigVM.OpenCommand.ExecuteAsync(null);
    }

    private void HandleUrlSaved(string url)
    {
        if (_isDisposed) return;
        _ = ViewModel.HandleUrlSavedAsync(url);
    }

    private void HandleDisconnectRequested()
    {
        if (_isDisposed) return;
        _ = ViewModel.HandleDisconnectAsync();
    }

    private async Task OnScroll()
    {
        if (_isDisposed) return;
        _autoScroll = await JS.InvokeAsync<bool>("scrollHelper.isScrolledToBottom", "events-container");
    }

    private void HandleEventAdded()
    {
        if (_isDisposed) return;
        if (_autoScroll)
        {
            _pendingScrollToBottom = true;
        }
        InvokeAsync(StateHasChanged);
    }

    private string GetConnectionClass()
    {
        // If no URL is configured, show unconfigured (gray)
        if (string.IsNullOrWhiteSpace(ViewModel.ServerUrl))
        {
            return "unconfigured";
        }

        return ViewModel.ConnectionState switch
        {
            ConnectionState.Connected => "connected",
            ConnectionState.Connecting => "connecting",
            ConnectionState.Reconnecting => "connecting",
            ConnectionState.Error => "error",
            _ => "disconnected" // Flashing red when URL is set but disconnected
        };
    }

    private string GetConnectionText()
    {
        if (string.IsNullOrWhiteSpace(ViewModel.ServerUrl))
        {
            return "Not configured";
        }

        return ViewModel.ConnectionState switch
        {
            ConnectionState.Connected => "Connected",
            ConnectionState.Connecting => "Connecting...",
            ConnectionState.Reconnecting => "Reconnecting...",
            ConnectionState.Error => "Error",
            _ => "Disconnected"
        };
    }

    protected override void Dispose(bool disposing)
    {
        if (disposing)
        {
            _isDisposed = true;
            ViewModel.EventAdded -= HandleEventAdded;
            FilterVM.FilterChanged -= HandleFilterChanged;
            ConfigVM.UrlSaved -= HandleUrlSaved;
            ConfigVM.DisconnectRequested -= HandleDisconnectRequested;
        }
        base.Dispose(disposing);
    }
}
